# Aliases Configuration

# Basic file operations
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias grep='grep --color=auto'

# Safety aliases
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# Modern CLI tools aliases (conditional based on availability)
if command -v lsd > /dev/null; then
    alias ls='lsd'
    alias lt='lsd --tree'
    alias ll='lsd -alF'
    alias la='lsd -A'
    alias l='lsd -CF'
fi

if command -v bat > /dev/null; then
    alias cat='bat'
    alias less='bat'
fi

if command -v eza > /dev/null; then
    alias ez='eza'
    alias ezl='eza -l'
    alias eza-tree='eza --tree'
fi

if command -v fd > /dev/null; then
    alias find='fd'
fi

if command -v rg > /dev/null; then
    alias grep='rg'
fi

# Git aliases
if command -v git > /dev/null; then
    alias g='git'
    alias gs='git status'
    alias ga='git add'
    alias gc='git commit'
    alias gp='git push'
    alias gl='git pull'
    alias gd='git diff'
    alias gb='git branch'
    alias gco='git checkout'
fi

if command -v lazygit > /dev/null; then
    alias lg='lazygit'
fi

# Docker aliases
if command -v docker > /dev/null; then
    alias d='docker'
    alias dc='docker-compose'
    alias dps='docker ps'
    alias di='docker images'
fi

# Navigation aliases
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias ~='cd ~'

# System information
alias df='df -h'
alias du='du -h'
alias free='free -h'